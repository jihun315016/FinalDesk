@if (Session["user"] == null)
{
    using (Html.BeginForm("CheckLogin", "Main"))
    {
        <table>
            <tr style="font-size: 15px">
                <td style="width: 30px">ID</td>
                <td><input type="text" name="User_No" size="8" style="margin-right: 10px; height: 23px" /></td>
                <td style="width: 30px">PW</td>
                <td><input type="password" name="User_Pwd" size="8" style="margin-right: 10px; height: 23px" /></td>
                <td><input type="submit" value="로그인" style="height: 23px; padding-top: 0px" /></td>
            </tr>
        </table>
    }
}
else
{
    <div style="margin-right:30px; font-size : 16px;">
        <span>[@ViewBag.user.User_No]</span>
        <span>@ViewBag.user.User_Name</span>님 안녕하세요.
    </div>
}