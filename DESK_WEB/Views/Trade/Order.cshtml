@model IPagedList<DESK_WEB.Models.DTO.WebOrderVO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h3>매출 현황</h3>

                @using (Html.BeginForm("Order", "Trade", FormMethod.Get))
                {
                    <input id="startDate" type="date" style="width:150px; height:28px" name="startDate" />
                    <input id="endDate" type="date" style="width:150px; height:28px" name="endDate" />
                    <input id="search" type="text" placeholder="거래처를 입력하세요." style="width:170px; height:28px" name="keyword" />
                    <input class="btnSearch" type="submit" value="검색" style="padding:0px 6px 0px 6px; font-size:16px" />
                }


            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <table class="table text-center">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">주문 번호</th>
                        <th scope="col">주문 일자</th>
                        <th scope="col">입하 일자</th>
                        <th scope="col">거래처</th>
                        <th scope="col">품번</th>
                        <th scope="col">품명</th>
                        <th scope="col">주문 수량</th>
                        <th scope="col">가격</th>
                        <th scope="col">총 금액</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Order_No</td>
                            <td>@item.Order_Date.ToShortDateString()</td>
                            <td>@item.Release_Date.ToShortDateString()</td>
                            <td>@item.Client_Name</td>
                            <td>@item.Product_Code</td>
                            <td>@item.Product_Name</td>
                            <td>@item.TotalQty.ToString("###,##0")</td>
                            <td>@item.Price.ToString("###,##0")</td>
                            <td>@item.TotalPrice.ToString("###,##0")</td>
                        </tr>
                    }

                </tbody>
            </table>

            <div class="pager">
                @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
            </div>
        </div>
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->  